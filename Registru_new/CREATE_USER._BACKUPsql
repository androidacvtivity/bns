

CREATE USER BACKUP_DB
  IDENTIFIED BY oracle
  DEFAULT TABLESPACE USERS
  TEMPORARY TABLESPACE TEMP
  PROFILE DEFAULT
  ACCOUNT UNLOCK;

-- 2 Roles for BACKUP_DB 
GRANT CONNECT TO BACKUP_DB;
GRANT RESOURCE TO BACKUP_DB;
ALTER USER BACKUP_DB DEFAULT ROLE ALL;

-- 7 System Privileges for BACKUP_DB 
GRANT ALTER SESSION TO BACKUP_DB;
GRANT CREATE DATABASE LINK TO BACKUP_DB;
GRANT CREATE SEQUENCE TO BACKUP_DB;
GRANT CREATE SESSION TO BACKUP_DB;
GRANT CREATE SYNONYM TO BACKUP_DB;
GRANT CREATE VIEW TO BACKUP_DB;
GRANT UNLIMITED TABLESPACE TO BACKUP_DB;

-- 1 Tablespace Quota for BACKUP_DB 
ALTER USER BACKUP_DB QUOTA UNLIMITED ON USERS;

-- 15 Object Privileges for BACKUP_DB 

GRANT EXECUTE ON SYS.DBMS_STATS TO BACKUP_DB;